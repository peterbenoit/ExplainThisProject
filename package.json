{
	"name": "explain-this-project",
	"displayName": "Explain This Project",
	"description": "A VS Code extension that analyzes your project structure and generates a comprehensive PROJECT_OVERVIEW.md file with details about languages, frameworks, dependencies, and architecture.",
	"version": "0.1.0",
	"publisher": "your-publisher-name",
	"author": {
		"name": "Your Name",
		"email": "your.email@example.com"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/yourusername/explain-this-project.git"
	},
	"bugs": {
		"url": "https://github.com/yourusername/explain-this-project/issues"
	},
	"homepage": "https://github.com/yourusername/explain-this-project#readme",
	"keywords": [
		"project",
		"analysis",
		"documentation",
		"overview",
		"markdown",
		"dependencies",
		"architecture"
	],
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"Other",
		"Documentation"
	],
	"activationEvents": [
		"onCommand:explain-this-project.explainProject"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "explain-this-project.explainProject",
				"title": "Explain This Project"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.105.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"eslint": "^9.36.0",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2"
	}
}
