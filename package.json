{
	"name": "explain-this-project",
	"displayName": "Explain This Project",
	"description": "A VS Code extension that analyzes your project structure and generates a comprehensive PROJECT_OVERVIEW.md file with details about languages, frameworks, dependencies, and architecture.",
	"version": "0.1.8",
	"icon": "icon.png",
	"publisher": "peterbenoit",
	"author": {
		"name": "Peter Benoit",
		"email": "peterbenoit@gmail.com"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/peterbenoit/explain-this-project.git"
	},
	"bugs": {
		"url": "https://github.com/peterbenoit/explain-this-project/issues"
	},
	"homepage": "https://github.com/peterbenoit/explain-this-project#readme",
	"readme": "MARKETPLACE.md",
	"keywords": [
		"project",
		"analysis",
		"documentation",
		"overview",
		"markdown",
		"dependencies",
		"architecture"
	],
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"Other",
		"Programming Languages"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:explain-this-project.explainProject",
		"onCommand:explain-this-project.explainProjectForceOverwrite",
		"onCommand:explain-this-project.askQuestions"
	],
	"contributes": {
		"commands": [
			{
				"command": "explain-this-project.explainProject",
				"title": "Explain This Project",
				"category": "Project Analysis"
			},
			{
				"command": "explain-this-project.explainProjectForceOverwrite",
				"title": "Explain This Project (Force Overwrite)",
				"category": "Project Analysis"
			},
			{
				"command": "explain-this-project.askQuestions",
				"title": "Explain This Project: Ask Questions",
				"category": "Project Analysis"
			}
		],
		"configuration": {
			"title": "Explain This Project",
			"properties": {
				"explainThisProject.includeDevDependencies": {
					"type": "boolean",
					"default": true,
					"description": "Include development dependencies in the analysis"
				},
				"explainThisProject.maxDirectoryDepth": {
					"type": "number",
					"default": 3,
					"minimum": 1,
					"maximum": 10,
					"description": "Maximum directory depth to analyze"
				},
				"explainThisProject.excludeDirectories": {
					"type": "array",
					"default": [
						"node_modules",
						".git",
						"dist",
						"build",
						"coverage"
					],
					"description": "Directories to exclude from analysis"
				},
				"explainThisProject.openaiApiKey": {
					"type": "string",
					"default": "",
					"description": "OpenAI API key for the project explanation agent",
					"markdownDescription": "Your OpenAI API key. Get one at [OpenAI Platform](https://platform.openai.com/api-keys)"
				},
				"explainThisProject.llmProvider": {
					"type": "string",
					"enum": [
						"openai"
					],
					"default": "openai",
					"description": "LLM provider to use for project explanations (extensible for future providers)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"dependencies": {
		"openai": "^4.67.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.105.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"eslint": "^9.36.0",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2"
	}
}
